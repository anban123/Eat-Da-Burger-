<h1>Eat-Da-Burger!</h1>

<div class="container">
  <div class="row">

    <div class="col-md-6">
        <div id="good-burgers"></div>
        <ul>
          {{#each burgers}} 
            {{#unless devoured}} 
              {{> burgers/burger-block devour=true}}
            {{/unless}}
          {{/each}}
        </ul>
    </div>

    <div class="col-md-6">
        <div id="devoured-burgers"></div>
        <ul>
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devour=false}}
            {{/if}}
          {{/each}}
        </ul>
    </div>

  </div>
</div>
        


<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

